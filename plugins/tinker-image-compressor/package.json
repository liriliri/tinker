{
  "name": "tinker-image-compressor",
  "version": "0.1.0",
  "description": "Image Compressor Plugin for Tinker",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\"",
    "dev:renderer": "vite --config ../vite.config.ts",
    "build": "concurrently \"npm run build:renderer\"",
    "build:renderer": "vite build --config ../vite.config.ts"
  },
  "tinker": {
    "name": "Image Compressor",
    "description": "An image compressor with support for multiple formats",
    "icon": "icon.png",
    "main": "dist/renderer/index.html",
    "preload": "dist/preload/index.js",
    "locales": {
      "zh-CN": {
        "name": "图片压缩",
        "description": "图片压缩工具，支持多种格式"
      }
    }
  }
}
